<form method="post" action="{{ path('program_episode_show_comment_delete', {'programSlug': program.slug, 'seasonId': season.id, 'episodeSlug': episode.slug, 'commentId': comment.id }) }}" onsubmit="return confirm('Are you sure you want to delete this comment?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
    <button class="btn">Delete</button>
</form>
